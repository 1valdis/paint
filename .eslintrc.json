{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier-standard"
  ],
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "env": {
    "browser": true,
    "mocha": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "rules": {
    "react/prop-types": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-useless-constructor": "error"
  },
  "parser": "@typescript-eslint/parser"
}
