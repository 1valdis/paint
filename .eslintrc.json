{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier-standard"
  ],
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "env": {
    "browser": true,
    "jasmine": true,
    "jest": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "rules": {
    "react/prop-types": [2, { "ignore": ["children"] }]
  },
  "parser": "@typescript-eslint/parser"
}
